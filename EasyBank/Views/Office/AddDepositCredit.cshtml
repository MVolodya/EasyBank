@model EasyBank.Models.DepositCreditModel

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script>
    $(document).ready(function () {
        $("#AccountTypeId").change(function () {
            if ($("#AccountTypeId").val() == 3) {
                $("div #earlyTermination").css("opacity", 0);
            }
            else $("div #earlyTermination").css("opacity", 1);
        });
    });
</script>

<h2>@Html.Label(@Resources.Resource.AddBankProduct)</h2>
<br />
&#9664 @Html.ActionLink(@Resources.Resource.Back, "DepositList", "Office", null, new{id="back"})
<br />
<br />

@using (Html.BeginForm("AddDepositCredit", "Office", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    
    <fieldset>
        <legend>Create new bank product</legend>

        <div class=" editor-label">
            @Html.LabelFor(model => model.AccountType)
        </div>
        @{
            List<SelectListItem> listType = new List<SelectListItem>();
            var ListTypes = ViewBag.Types;
            foreach (var item in ListTypes)
            {
                listType.Add(new SelectListItem() { Text = item.TypeName, Value = item.TypeId.ToString() });
            }
        }
        @Html.DropDownListFor(model => model.AccountTypeId, listType)


        @*  <div class=" editor-label">
            @Html.LabelFor(model => model.AccountType)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AccountType)
            @Html.ValidationMessageFor(model => model.AccountType)
        </div> *@

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Duration)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Duration)
            @Html.ValidationMessageFor(model => model.Duration)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.InterestRate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.InterestRate)
            @Html.ValidationMessageFor(model => model.InterestRate)
        </div>

        <div id="earlyTermination">
            <div class="editor-label">
                <table>
                    <tr>
                        <td>@Html.EditorFor(model => model.EarlyTermination)</td>
                        <td>@Html.LabelFor(model => model.EarlyTermination)</td>
                    </tr>
                </table>
                
                
            </div>
            <div class="editor-field">
                
                @Html.ValidationMessageFor(model => model.EarlyTermination)
            </div>
        </div>

        <p>
            <input type="submit" value=@Resources.Resource.Create class="submit" />
        </p>
    </fieldset>
}

