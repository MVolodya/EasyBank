@model PagedList.IPagedList<EasyBank.Models.Operator>
@using PagedList.Mvc;
<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Operators";
}
<h2>@Html.Label("Operators")</h2>
@if (User.IsInRole("Administrator"))
{
    @Html.ActionLink("Register Operator", "RegisterOperator", "Account")
}

@using (Html.BeginForm("OperatorsList", "Protected", FormMethod.Get))
{
    <p>
        @*Enter only the Surname or identification number*@
        @Html.Label(@Resources.Resource.ClientListSearchTypeRequirement)@Html.TextBox("Search", ViewBag.CurrentFilter as string)
        <input type="submit" value=@Resources.Resource.Search />
    </p>
}
@if (Model.Count() == 0)
{
    <h3>@Html.Label(@Resources.Resource.ClientNotFound)!</h3>
    <h4>
        <!--Make sure you've entered correct information and try again!-->
        @Html.Label(@Resources.Resource.AdviceMessageInClientListSearch)
    </h4>
}
else
{
    {
        <table>
            <tr>
                <th>

                    @Html.ActionLink(@Resources.Resource.Name, "OperatorsList", new { sort = ViewBag.NameSort, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    @Html.ActionLink(@Resources.Resource.Surname, "OperatorsList", new { sort = ViewBag.SurnameSort, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    @Html.ActionLink(@Resources.Resource.Email, "OperatorsList", new { sort = ViewBag.EmailSort, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    @Html.ActionLink(@Resources.Resource.RegDate, "OperatorsList", new { sort = ViewBag.RegistrationDateSort, currentFilter = ViewBag.CurrentFilter })
                </th> 

                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name).ToString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname).ToString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegistrationDate)
                    </td>
                    @* 
                    <td>
                        @Html.ActionLink(@Resources.Resource.Passport, "ShowPassport", new { id = item.ClientId }) |
                        @Html.ActionLink(@Resources.Resource.AddPhoto, "AddPhoto", new { id = item.ClientId }) |
                        @Html.ActionLink(@Resources.Resource.Edit, "EditClient", new { id = item.ClientId }) |
                        @Html.ActionLink(@Resources.Resource.Details, "ClientsProfile", new { clientId = item.ClientId }) |
                    </td> *@
                </tr>
            }
        </table>
    }
}
<br />
@if (!Request["Search"].IsEmpty())
{
    @Html.ActionLink(@Resources.Resource.BackToList, "OperatorsList")
}
<br />
@Resources.Resource.Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) @Resources.Resource.Of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("OperatorsList", new { page, sort = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))